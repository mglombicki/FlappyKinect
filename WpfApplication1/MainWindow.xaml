<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Flappy Kinect" Height="570" Width="960" Closing="Window_Closing">
    <Grid>
        <Image x:Name="ColorImage" HorizontalAlignment="Right" Margin="0" VerticalAlignment="Top" />
        <Label Content="Time" HorizontalAlignment="Left" Margin="807,10,0,0" VerticalAlignment="Top"/>
        <Label x:Name="TimeLabel" Content="Label" HorizontalAlignment="Left" Margin="880,10,0,0" VerticalAlignment="Top" Width="72"/>
        <Canvas x:Name="BirdShape">
            <Rectangle  Width="40" Height="40" Canvas.Left="450" Canvas.Top="0" Fill="Blue" />
        </Canvas>
        <Canvas x:Name="PipeShape">
            <Rectangle Width="100" Height="180" Canvas.Left="0" Canvas.Top="360" Fill="Green" />
        </Canvas>
        <Label Content="Flap" HorizontalAlignment="Left" Margin="807,36,0,0" VerticalAlignment="Top"/>
        <Label x:Name="FlapLabel" Content="Label" HorizontalAlignment="Left" Margin="880,36,0,0" VerticalAlignment="Top" Width="72"/>

    </Grid>
</Window>
